<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageTwoway"
        android:layout_width="wrap_content"
        android:layout_height="453dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/one_way4" />

    <Button
        android:id="@+id/position1"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageTwoway"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/position2"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/position3"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageTwoway"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/position4"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageTwoway"
        android:layout_centerHorizontal="true"
        android:text="Appuyez sur la position correspondant votre voiture"
        android:textAlignment="center"
        android:textSize="20sp" />
</RelativeLayout>