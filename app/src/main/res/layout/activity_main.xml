<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.noticket.noticketv6.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/poteau">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/boutPanc1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/boutImPanc1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription="@string/desc_panc"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textImPanc1"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/no_parking_blank" />

                <TextView
                    android:id="@+id/textImPanc1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="125dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="125dp"
                    android:gravity="center"
                    android:text="@string/alerte_max_pancarte"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/fleche1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="125dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="220dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/boutImPanc1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/boutImPanc1"
                    app:srcCompat="@drawable/fleche_d" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
