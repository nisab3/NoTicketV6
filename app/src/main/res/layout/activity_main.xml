                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription="@string/desc_panc"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textImPanc1"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/no_parking_blank" />

                <ImageButton
                    android:id="@+id/boutDeletePanc1"
                    style="@android:style/Widget.Holo.ImageButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:contentDescription="@string/desc_bout_delete"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/boutImPanc1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_del_plain" />

                <TextView
                    android:id="@+id/textImPanc1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="125dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="125dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/fleche1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="125dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="220dp"
                    android:contentDescription="@string/desc_fleche"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/boutImPanc1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/boutImPanc1"
                    app:srcCompat="@drawable/fleche_d" />

            </android.support.constraint.ConstraintLayout>

